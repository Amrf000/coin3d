#! /bin/sh

usage()
{
cat <<EOF
Usage: coin-config [OPTIONS]
Options:
  --cppflags
  --ldflags
  --libs
  --datadir
  --version
  --usage | --help
EOF
  exit $1
}

###### MAIN ###############################################################

while test $# -gt 0; do
  case $1 in
    --cppflags)
      # NOTE: If the first includedir argument is changed in the future,
      # we need to update configure.in as well, since the argument is
      # shifted off.
      echo -I@includedir@ @COIN_EXTRA_CPPFLAGS@
      ;;
    --ldflags)
      echo -L@libdir@ @COIN_EXTRA_LDFLAGS@
      ;;
    --libs)
      echo @COIN_LIBNAME@ @COIN_EXTRA_LIBS@
      ;;
    --datadir)
      echo @datadir@
      ;;
    --version)
      echo @COIN_VERSION@
      ;;
    --help | --usage)
      usage 0
      ;;
    *)
      echo "Unknown option: \"$1\""
      usage 1 1>&2
      ;;
  esac
  shift
done

exit 0

